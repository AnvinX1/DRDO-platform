# Server Configuration
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5174

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/tech-intelligence

# API Keys for External Services
OPENAI_API_KEY=your_openai_api_key_here
USPTO_API_KEY=your_uspto_api_key_here
EPO_API_KEY=your_epo_api_key_here
WIPO_API_KEY=your_wipo_api_key_here
ARXIV_API_KEY=your_arxiv_api_key_here
PUBMED_API_KEY=your_pubmed_api_key_here
IEEE_API_KEY=your_ieee_api_key_here
CRUNCHBASE_API_KEY=your_crunchbase_api_key_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRE=30d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Data Aggregation Settings
PATENT_COLLECTION_INTERVAL=0 2 * * *
PUBLICATION_COLLECTION_INTERVAL=0 3 * * *
COMPANY_COLLECTION_INTERVAL=0 4 * * 0
MARKET_DATA_COLLECTION_INTERVAL=0 5 * * *
ANALYSIS_INTERVAL=0 6 * * *

# Forecasting Settings
FORECASTING_INTERVAL=6
FORECASTING_CONFIDENCE_THRESHOLD=0.6
FORECASTING_TIME_HORIZON=5

# Monitoring Settings
ALERT_EMAIL=admin@drdo.gov.in
ALERT_THRESHOLD_PATENTS=100
ALERT_THRESHOLD_PUBLICATIONS=50
ALERT_THRESHOLD_MARKET_CHANGE=0.2

# Logging
LOG_LEVEL=info
LOG_FILE_MAX_SIZE=10m
LOG_FILE_MAX_FILES=5
